<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:textSize="16sp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <TextView    android:id="@+id/ListViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textSize="16sp"
            android:textStyle="bold">
        </TextView>

        <RelativeLayout
            android:id="@+id/ListViewDistanceCostA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ListViewAddress">

            <RelativeLayout
                android:padding="10dip"
                android:id="@+id/ListViewShowDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ListViewDistance"

                    android:textSize="16sp"
                />

                <TextView
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/ListViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Km"/>


            </RelativeLayout>


            <RelativeLayout
            android:padding="10dip"
            android:id="@+id/ListViewShowAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ListViewShowDistance"
            >
            <TextView
                android:layout_toRightOf="@+id/ListViewAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" Slots"/>
        <TextView
            android:id="@+id/ListViewAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            />
        </RelativeLayout>
        <RelativeLayout
            android:padding="10dip"
            android:id="@+id/ListViewShowCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ListViewShowAvailability">
            <TextView
                android:id="@+id/Rs"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Rs "/>
            <TextView
                android:id="@+id/ListViewCost"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Rs"/>
        </RelativeLayout>
        </RelativeLayout>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/ListViewName"
        android:id="@+id/ListViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>


</RelativeLayout>